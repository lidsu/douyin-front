<view>
    <view class="login-icon">
        <image style="border-radius:25px;" class="login-img" src="../resource/images/dsp.jpg"></image>
    </view>
    <view class="login-from">
        <form bindsubmit='doLogin'>
            <!--账号-->
            <view class="inputView">
                <image class="nameImage" src="/assets/images/login/login.png"></image>
                <label class="loginLabel">账号</label>
                <input name="username" value='lidsu' class="inputText" placeholder="请输入账号" />
            </view>
            <view class="line"></view>

            <!--密码-->
            <view class="inputView">
                <image class="keyImage" src="/assets/images/login/pwd2.png"></image>
                <label class="loginLabel">密码</label>
                <input name="password" value='123456' class="inputText" password="true" placeholder="请输入密码" />
            </view>

            <!--按钮-->
            <view>
                <button style="border-radius:25px;" class="loginBtn" type="primary" form-type='submit'>登录</button>
            </view>

            <view>
                <button style="border-radius:25px;" class="goRegistBtn" type="warn" bindtap="goRegistPage">没有账号？点击注册</button>
            </view>
        </form>
    </view>
</view>